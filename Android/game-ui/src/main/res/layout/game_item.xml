<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#292A42"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@android:color/holo_green_light"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/iv_game_icon"
        android:layout_marginLeft="12dp"
        tools:background="@android:color/holo_red_light"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        app:layout_constraintLeft_toRightOf="@+id/iv_game_icon"
        android:paddingTop="26dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_game_name"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        tools:text="name"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginLeft="14dp"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tv_game_name"
        app:layout_constraintLeft_toLeftOf="@+id/tv_game_name"
        android:textSize="12sp"
        tools:text="desc"
        android:textColor="#B3FFFFFF"
        android:id="@+id/tv_game_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>